<span class="sign-up-banner">
  <div class="sign-up-container group">
    <strong>Play Your Next Favorite Video Game.</strong>
    <h2>Create an Account</h2>
    <form>
      <input type="text" name="user[name]" value="<%= user.name %>" placeholder="name">

      <input type="text" name="user[email]" value="<%= user.email %>" placeholder="email">

      <input type="password" name="user[password]" placeholder="password">

      <button>Sign Up</button>
    </form>
  </div>
</span>
