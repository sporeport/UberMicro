<figure class="game-instance">


  <ul class="want-button-options-list">
    <li>add to played</li>
    <li>add to currently playing</li>
    <li class="options-add-list">add list</li>
  </ul>

  <button class="want-button-options"></button>

  <button class="want-button"
          data-id="<%= game.id %>"
          <% if (!UberMicro.currentUser.signed_in()) { %> disabled <% } %> >
    want to play
  </button>

  <ul>
    <li>
    <% if (game.escape("because_title")) { %>
      Because you liked <%=game.escape("because_title")%> we recommend
      <a href="#/games/<%= game.id %>">
        <em><%= game.escape("title") %></em>
      </a>
    <% } else { %>
      Popular on UberMicro
      <a href="#/games/<%= game.id %>">
        <em><%= game.escape("title") %></em>
      </a>
    <% }%>
    </li>
    <li>genre:
      <a href="#/games/search/<%= game.escape("genre") %>">
        <%= game.escape("genre") %>
      </a>
    </li>
    <li>company: <%= game.escape("company") %></li>
    <li>description: <%= game.escape("description") %></li>
  </ul>
</figure>
